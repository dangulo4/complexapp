<%- include('includes/header') %>

<div class="container container--narrow py-md-5">
  <%- include('includes/flash') %>

  <a class="samll font-weight-bold" href="/post/<%= post._id%>"
    >&laquo; Back to post permalink</a
  >

  <form class="mt-3" action="/post/<%= post._id%>/edit" method="POST">
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1">
        <small>Title</small>
      </label>
      <input
        autofocus
        name="title"
        value="<%= post.title %>"
        id="post-title"
        class="form-control form-control-lg form-control-title"
        type="text"
        placeholder=""
        autocomplete="off"
      />
    </div>

    <div class="form-group">
      <label for="post-body" class="text-muted mb-1 d-block">
        <small>Body Content</small>
      </label>
      <textarea
        name="body"
        id="post-body"
        class="body-content tall-textarea form-control"
        type="text"
      >
<%= post.body %></textarea
      >
    </div>

    <button class="btn btn-primary">Save Updates</button>
  </form>
</div>

<%- include('includes/footer') %>
